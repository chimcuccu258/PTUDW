@model QLVinpearl_63130803.Models.DICHVU

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-5">
    <ul class="list-group">
        <li class="list-group-item">
            <h4 class="mb-1">Dịch Vụ: @Html.DisplayFor(model => model.tenDV)</h4>
            <br />

            <p class="mb-1"><span class="fw-bold">Mô Tả</span><br /><span class="text-muted">@Html.DisplayFor(model => model.moTa)</span></p>
            <br />

            <div class="row">
                <div class="col-md-6">
                    <span class="fw-bold">Loại Dịch Vụ</span><br />
                    @Html.DisplayFor(model => model.LOAIDV.tenLoai)
                </div>
                <div class="col-md-6">
                    <span class="fw-bold">Xếp loại</span><br />
                    @Html.DisplayFor(model => model.xepLoai)
                </div>
            </div>
            <br />

            <p class="mb-1">
                <span class="fw-bold">Số điện thoại</span><br />
                @Html.DisplayFor(model => model.sdtDV)
            </p>
            <br />

            <p class="mb-1">
                <span class="fw-bold">Địa chỉ</span><br />
                @Html.DisplayFor(model => model.diaChiDV)
            </p>
        </li>
    </ul>
    <div class="my-4" style="width: 100%">
        <div class="m-auto">
            @Html.ActionLink("Sửa Thông Tin", "Edit", null, new { id = Model.maDV }, new { @class = "btn btn-primary btn-lg" })
            @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
        </div>
    </div>
</div>