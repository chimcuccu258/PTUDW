@{
    if (Session["Email"] != null)
    {
        string Email = Session["Email"].ToString();
        string Name = Session["TenTaiKhoan"].ToString();
        ViewBag.Email = Email;
        ViewBag.Name = Name;
    }
    else
    {
        Response.Redirect("~/Admin/Login_63130803/Index");
    }
}
