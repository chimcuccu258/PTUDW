    <style>
        .truncate-text {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 1; /* Số dòng tối đa trước khi hiển thị ... */
            -webkit-box-orient: vertical;
        }

        .scrollable-container, body {
            max-height: 300px;
            overflow-y: scroll;
            /* Ẩn thanh cuộn */
            -ms-overflow-style: none; /* IE and Edge */
            scrollbar-width: none;
            background-color: #F5F7FA; /* Firefox */
        }

            .scrollable-container, body::-webkit-scrollbar {
                display: none; /* Chrome, Safari, and Opera */
            }
    </style>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-light bg-light shadow">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3 text-dark d-flex justify-content-center" href="@Url.Action("Index", "Dashboard_63130803")">
        <img src="https://vinpearl.com/themes/porto/images/new-homepage/vp-logo-blue.svg" alt="Vinpearl Logo" class="navbar-brand-image">
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0"
                id="sidebarToggle"
                href="#!">
            <i class="fas fa-bars text-dark"></i>
        </button>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto">
            <li class="text-dark my-auto fw-bold">@ViewBag.Email</li>
            <li class="nav-item dropdown">
