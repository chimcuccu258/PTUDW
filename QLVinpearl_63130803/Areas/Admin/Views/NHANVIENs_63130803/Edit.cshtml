@model QLVinpearl_63130803.Models.NHANVIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
		$(function () {
			var fileupload = $("#Avatar");
			var image = $("#FileUpload");
			image.click(function () {
				fileupload.click();
			});
			fileupload.change(function () {
				var fileName = $(this).val().split('\\')[$(this).val().split('\\').length - 1];
				document.getElementById("anh").value = fileName;
			});
		});
    </script>
}

@using (Html.BeginForm("Edit", "NHANVIENs_63130803", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Sửa thông tin nhân viên</h3>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.maNV)
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold">Họ Tên</label>
                                        @Html.EditorFor(model => model.hoTenNV, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.hoTenNV, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label fw-bold">Số Điện Thoại</label>
                                        @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div class="form-outline datepicker w-100">
                                        <label class="form-label fw-bold">Địa Chỉ</label>
                                        @Html.TextAreaFor(model => model.diaChi, new { @class = "form-control form-control-lg" })
                                        @Html.ValidationMessageFor(model => model.diaChi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline datepicker w-100">
                                        <label class="form-label fw-bold">Ngày Sinh</label>
                                        @Html.EditorFor(model => model.ngaySinh, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.ngaySinh, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">
                                    <label class="form-label fw-bold mt-4">Giới Tính</label>
                                    <div class="form-outline datepicker w-100 ">
                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label" for="femaleGender">Nam</label>
                                            @Html.RadioButtonFor(model => model.gioiTinh, "True", new { @class = "form-check-input", @checked = "checked" })
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label" for="maleGender">Nữ</label>
                                            @Html.RadioButtonFor(model => model.gioiTinh, "False", new { @class = "form-check-input" })
                                        </div>
                                        <br />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4 pb-2">
                                    <div class="form-outline datepicker w-100">
                                        <label class="form-label fw-bold">Email</label>
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline datepicker w-100">
                                        <label class="form-label fw-bold">Loại Nhân Viên</label>
                                        @Html.DropDownList("maLoaiNV", null, htmlAttributes: new { @class = "form-control form-control-lg" })
                                        @Html.ValidationMessageFor(model => model.maLoaiNV, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">
                                    <div class="form-outline datepicker w-100">
                                        <label class="form-label fw-bold">Mật Khẩu</label>
                                        @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                        @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline datepicker w-100">
                                        <label class="form-label fw-bold">Ảnh</label>
                                        <div style="display:flex ">
                                            <input class="form-control form-control-lg" type="file" name="Avatar" id="Avatar" />
                                            @Html.EditorFor(model => model.anh)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="width: 100%; display: flex">
                                <div class="m-auto">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Sửa" />
                                    @Html.ActionLink("Quay Về", "Index", null, new { @class = "btn btn-primary btn-lg" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}